# ===========================================
# YUV.AI Trends - Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values

# LLM Configuration
# -----------------
# Provider options: local_wasm, groq, cohere, anthropic
LLM_PROVIDER=local_wasm

# Optional: Specific model to use (leave empty for default)
LLM_MODEL=

# API Keys (Optional - only needed if using those providers)
# ---------------------------------------------------------
ANTHROPIC_API_KEY=
COHERE_API_KEY=
GROQ_API_KEY=

# Production Settings (for deployed backend)
# ------------------------------------------
# Comma-separated list of allowed frontend origins
# Example: https://your-app.vercel.app,https://your-custom-domain.com
ALLOWED_ORIGINS=

# Port (usually set by hosting platform)
PORT=8000
